{
	"compilerOptions": {
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2020",
		"module": "commonjs",
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"allowJs": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"typeRoots": ["./node_modules/@types"],
		"lib": [
			"DOM",
			"ES2020"
		]
	},
	"include": [
		"src/**/*.ts",
	]
}
